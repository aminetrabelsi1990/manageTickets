{% extends 'base.html.twig' %}

{% block title %}{{ 'show_user'|trans }} {% endblock %}

{% block body %}
    <div class="wrapper">
        <div class="main-header">
			<!-- Logo Header -->
			{% include 'partial/logoheader.html.twig' %}
			<!-- End Logo Header -->
            {% include 'partial/navbar.html.twig' %}
        </div>
        {% include 'partial/sidebar.html.twig' %}
		<div class="main-panel">
			<div class="content">
				<div class="container-fluid">
					<div class="page-header">
						<h4 class="page-title">{{ 'user'|trans }} </h4>
						<ul class="breadcrumbs">
							<li class="nav-home">
								<a href="#">
									<i class="flaticon-home"></i>
								</a>
							</li>
							<li class="separator">
								<i class="flaticon-right-arrow"></i>
							</li>
							<li class="nav-item">
								<a href="#">{{ 'user'|trans }} </a>
							</li>
							<li class="separator">
								<i class="flaticon-right-arrow"></i>
							</li>
							<li class="nav-item">
								<a href="#">{{ 'show'|trans }} {{ 'user'|trans }} </a>
							</li>
						</ul>
					</div>
					<div class="row">
						<div class="col-md-12">
							<div class="card">
									{{ form_start(form)}}
									<div class="card-body">
									{# New form #}
									<div class="form-group form-show-validation row">
										<label for="email" class="col-lg-3 col-md-3 col-sm-4 mt-sm-2 text-right">{{ 'Email'|trans }} </label>
										<div class="col-lg-4 col-md-9 col-sm-8">
											<div class="input-group">
												{{ form_widget(form.email, { 'attr': { 'class': 'form-control'}}) }}
											</div>
										</div>
                                    </div>
                                    <div class="form-group form-show-validation row">
										<label for="firstName" class="col-lg-3 col-md-3 col-sm-4 mt-sm-2 text-right">{{ 'First name'|trans }} </label>
										<div class="col-lg-4 col-md-9 col-sm-8">
											<div class="input-group">
												{{ form_widget(form.firstName, { 'attr': { 'class': 'form-control'}}) }}
											</div>
										</div>
                                    </div>
                                    <div class="form-group form-show-validation row">
										<label for="lastName" class="col-lg-3 col-md-3 col-sm-4 mt-sm-2 text-right">{{ 'Last name'|trans }} </label>
										<div class="col-lg-4 col-md-9 col-sm-8">
											<div class="input-group">
												{{ form_widget(form.lastName, { 'attr': { 'class': 'form-control'}}) }}
											</div>
										</div>
                                    </div>
									<div class="card-action">
										<div class="row">
											<div class="col-md-12">
												<a class="btn btn-danger" href="{{ app.request.headers.get('referer') }}">{{ 'Cancel'|trans }}</a>
											</div>										
										</div>
									</div>
									{{ form_end(form)}}
							</div>						
        				{# end form #}
						</div>
					</div>
				</div>
            </div>			
		</div>        
    </div>
{% endblock %}
