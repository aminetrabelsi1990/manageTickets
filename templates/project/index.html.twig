{% extends 'base.html.twig' %}

{% block title %}{{ 'project_list'|trans }} {% endblock %}

{% block body %}
    <div class="wrapper">
        <div class="main-header">
            <!-- Logo Header -->
            {% include 'partial/logoheader.html.twig' %}
            <!-- End Logo Header -->

            {% include 'partial/navbar.html.twig' %}
        </div>

        {% include 'partial/sidebar.html.twig' %}

        
        {# begin datatable  #}
        <div class="main-panel">
			<div class="content">
				<div class="container-fluid">
					<div class="page-header">
						<h4 class="page-title">{{ 'manage_projects'|trans }} </h4>
						<ul class="breadcrumbs">
							<li class="nav-home">
								<a href="#">
									<i class="flaticon-home"></i>
								</a>
							</li>
							<li class="separator">
								<i class="flaticon-right-arrow"></i>
							</li>
							<li class="nav-item">
								<a href="#">{{ 'Project'|trans }}</a>
							</li>
							<li class="separator">
								<i class="flaticon-right-arrow"></i>
							</li>
							<li class="nav-item">
								<a href="#">{{ 'list'|trans }}</a>
							</li>
						</ul>
					</div>
					{% include 'partial/alert.html.twig' %}
					<div class="row">
						<div class="col-md-12">
							<div class="card">
								<div class="card-header">
									<div class="d-flex align-items-center">
										<h4 class="card-title">{{ 'project_list'|trans }}</h4>
										<a href="{{ path('app_project_create') }}" class="btn btn-primary btn-round ml-auto">
											<i class="la la-plus"></i>
											{{ 'add_project'|trans }}
                                        </a>
									</div>
								</div>
								<div class="card-body">

									<div class="table-responsive">
										<table id="add-row" class="display table table-striped table-hover" >
											<thead>
												<tr>
													<th>{{ 'Name'|trans }}</th>
													<th style="width: 10%">{{ 'action'|trans }}</th>
												</tr>
											</thead>
											<tfoot>
												<tr>
													<th>{{ 'Name'|trans }}</th>
													<th style="width: 10%">{{ 'action'|trans }}</th>
												</tr>
											</tfoot>
											<tbody>
												{% for project in projects %}
													<tr>
														<td>{{ project.name }}</td>	     
														<td>
															<div class="form-button-action">
																<a href="{{ path('app_project_edit', { 'id': project.id}) }}"  data-toggle="tooltip"  class="btn btn-link btn-primary btn-lg" data-original-title="{{ 'Edit'|trans }}">
																	<i class="la la-edit"></i>
																</a>
																{% if project.userId.id == app.user.id %}
																	<a href="{{ path('app_project_delete', { 'id': project.id}) }}" data-toggle="tooltip" title="" class="btn btn-link btn-danger" data-original-title="{{ 'remove'|trans }}">
																		<i class="la la-times"></i>
																	</a>
																{% endif %}
															</div>
														</td>
													</tr>	
											    {% endfor %}					
											</tbody>
										</table>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
			
		</div>
        {# end datatable #}
    </div>
{% endblock %}
